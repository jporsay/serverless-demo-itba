{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "predeploy": [
        "yarn --cwd ./public install",
        "yarn --cwd ./public run build"
    ],
    "public": "public/build"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
